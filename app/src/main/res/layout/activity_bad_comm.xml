<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".BadComm">

    <TextView
        android:id="@+id/textViewres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text=""
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="160dp" />

    <TextView
        android:id="@+id/textViewcominfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/armata"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="SYS_CTRL: There is some data being transmitted to a server. But the reverse communication channel is broken. EVABS is not able to receive the message. Can you somehow get the message?"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/textViewheadcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        android:paddingRight="15dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="INTERCEPT" />

    <Button
        android:id="@+id/buttoncom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="176dp"
        android:text="HINT" />

    <TextView
        android:id="@+id/textViewcomhint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/armata"
        android:textColor="@color/colorWhite"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textAlignment="center"
        android:layout_marginBottom="115dp"
        android:text="" />
</RelativeLayout>